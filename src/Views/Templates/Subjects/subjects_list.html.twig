<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Department</th>
        <th>University</th>
        <th>Actions</th>
    </tr>
    {% for subject in subjects %}
        <tr>
            <td>{{ subject.id }}</td>
            <td>{{ subject.name }}</td>
            <td>{{ subject.department_name }}</td>
            <td>{{ subject.university_name }}</td>
            <td>
                <a href="index.php?controller=subjects&action=edit&id={{ subject.id }}">edit</a>
                <a href="index.php?controller=subjects&action=delete&id={{ subject.id }}">delete</a>
                <a href="index.php?controller=registrations&action=new&id={{ subject.id }}">register students</a>
                <a href="index.php?controller=registrations&action=search&search_subject_id={{ subject.id }}">show registered</a>
            </td>
        </tr>
    {% endfor %}
</table>
<a href="index.php?controller=subjects&action=new">Add a new subject</a>